{
  "name": "Flask Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        // Always use the workspace venv
        "python.defaultInterpreterPath": ".venv/bin/python"
      }
    }
  },

  // runs once when the container is first created
  "onCreateCommand": "python -m venv .venv",

  // runs after creation; good place to install deps
  "postCreateCommand": ". .venv/bin/activate && pip install -r requirements.txt",

  // runs on every start (even after stop/resume)
  "postStartCommand": ". .venv/bin/activate && pip install -r requirements.txt",

  "forwardPorts": [5000]
}

{
  "name": "Flask Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python"
      }
    }
  },

  // Runs only the first time the container is created
  "onCreateCommand": "python -m venv .venv",

  // Install your deps after creation
  "postCreateCommand": ". .venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt && sudo apt-get update -y && sudo apt-get install -y sqlite3",

  // Keep deps fresh every time the Codespace starts
  "postStartCommand": ". .venv/bin/activate && pip install -r requirements.txt",

  "forwardPorts": [5000]
}
